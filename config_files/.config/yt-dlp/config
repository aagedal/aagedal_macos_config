-f "bestvideo+bestaudio"
--ffmpeg-location "/opt/homebrew/bin/ffmpeg"
--embed-metadata
--restrict-filenames
-o '~/Downloads/yt-dlp/%(title)s-%(id)s.%(ext)s'
--exec "bash -c 'FILE=\"{}\"; DIR=$(dirname \"$FILE\"); BASE=$(basename \"$FILE\" | sed \"s/\.[^.]*$//\"); ffmpeg -i \"$FILE\" -map 0 -c copy \"$DIR/$BASE.mp4\" -map 0 -c:v libx264 -c:a aac \"$DIR/$BASE_backup.mp4\"'"
